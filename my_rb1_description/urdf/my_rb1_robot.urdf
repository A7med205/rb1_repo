<?xml version="1.0"?>
<robot name="simple_cylinder_robot">

  <!-- Gazebo Tags -->
  <gazebo reference="base_link">
    <material>Gazebo/Blue</material>
  </gazebo>
  
  <gazebo reference="left_wheel_joint">
    <material>Gazebo/Red</material>
  </gazebo>

  <gazebo reference="right_wheel_joint">
    <material>Gazebo/Red</material>
  </gazebo>

  <gazebo reference="front_caster">
    <material>Gazebo/White</material>
  </gazebo>

  <gazebo reference="front_caster_support_joint">
	  <preserveFixedJoint>true</preserveFixedJoint>
	</gazebo>

  <gazebo reference="front_caster">
    <mu1>0</mu1>
    <mu2>0</mu2>
  </gazebo>

  <gazebo reference="back_caster">
    <material>Gazebo/White</material>
  </gazebo>

  <gazebo reference="back_caster_support_joint">
	  <preserveFixedJoint>true</preserveFixedJoint>
	</gazebo>

  <gazebo reference="back_caster">
    <mu1>0</mu1>
    <mu2>0</mu2>
  </gazebo>

  <!-- Base Link -->
  <link name="base_link">
    <inertial>
      <mass value="23.5"/>
      <inertia ixx="0.5434"  ixy="0"  ixz="0" iyy="0.5434" iyz="0" izz="0.7344" />
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.25" length="0.3"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.25" length="0.3"/>
      </geometry>
    </collision>
  </link>


  <!-- Base Footprint -->
  <!-- Joint -->
  <joint name="base_joint" type="fixed">
    <parent link="base_link"/>
    <child link="base_footprint"/>
    <origin xyz="0 0 -0.15" rpy="0 0 0"/>
    <axis xyz="0 0 0"/>
  </joint>

  <!-- Link -->
  <link name="base_footprint">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.0125" length="0.01"/>
      </geometry>
    </visual>
    <collision>
    <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.0125" length="0.01"/>
      </geometry>
    </collision>
  </link>

  <!-- Left Wheel -->
  <!-- Joint -->
  <joint name="left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="0.0 -0.2 -0.15" rpy="0 0 0"/>
    <axis xyz="0 1 0"/> 
  </joint>

  <!-- Wheel -->
  <link name="left_wheel">
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.0001823"  ixy="0"  ixz="0" iyy="0.0001823" iyz="0" izz="0.00015625" />
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.025" length="0.05"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.025" length="0.05"/>
      </geometry>
    </collision>
  </link>

  <!-- Right Wheel -->
  <!-- Joint -->
  <joint name="right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin xyz="0.0 0.2 -0.15" rpy="0 0 0"/>
    <axis xyz="0 1 0"/> 
  </joint>

  <!-- Wheel -->
  <link name="right_wheel">
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.0001823"  ixy="0"  ixz="0" iyy="0.0001823" iyz="0" izz="0.00015625" />
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="-1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.025" length="0.05"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="-1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.025" length="0.05"/>
      </geometry>
    </collision>
  </link>

  <!-- Front Caster Wheel -->
  <!-- Joint -->
  <joint name="front_caster_joint" type="fixed">
    <parent link="base_link"/>
    <child link="front_caster"/>
    <origin xyz="0.1 0 -0.125" rpy="0 0 0"/>
    <axis xyz="0 0 0"/>
  </joint>

  <!-- Support -->
  <link name="front_caster">
    <inertial>
      <mass value="0.25"/>
      <inertia ixx="0.00010417"  ixy="0"  ixz="0" iyy="0.00010417" iyz="0" izz="0.00010417" />
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.04"/>
      </geometry>
    </visual>
    <collision>
    <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.025"/>
      </geometry>
    </collision>

  <!-- Wheel -->
    <visual>
      <origin xyz="0 0 -0.025" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.025"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 -0.025" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.025"/>
      </geometry>
    </collision>
  </link>

  <!-- Back Caster Wheel -->
  <!-- Joint -->
  <joint name="back_caster_joint" type="fixed">
    <parent link="base_link"/>
    <child link="back_caster"/>
    <origin xyz="-0.1 0 -0.125" rpy="0 0 0"/>
    <axis xyz="0 0 0"/>
  </joint>

  <!-- Support -->
  <link name="back_caster">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.04"/>
      </geometry>
    </visual>
    <collision>
    <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.025"/>
      </geometry>
    </collision>

  <!-- Wheel -->
    <visual>
      <origin xyz="0 0 -0.025" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.025"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 -0.025" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.025"/>
      </geometry>
    </collision>
  </link>

  <!-- Laser Link -->
  <!-- Joint -->
  <joint name="laser_joint" type="fixed">
    <parent link="base_link"/>
    <child link="front_laser"/>
    <origin xyz="0.25 0 0.075" rpy="0 0 0"/>
    <axis xyz="0 0 0"/>
  </joint>

  <!-- Laser -->
  <link name="front_laser">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 3.14"/>
      <geometry>
        <cylinder radius="0.0125" length="0.05"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 3.14"/>
      <geometry>
        <cylinder radius="0.0125" length="0.1"/>
      </geometry>
    </collision>
  </link>

</robot>